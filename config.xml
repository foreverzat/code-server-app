<?xml version='1.0' encoding='utf-8'?>
<widget id="app.codeserver" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>CodeServerApp</name>
    <description>
        
    </description>
    <author email="zhaoyunzhou@zhuanzhuan.com" href="https://github.com/cdr/code-server">
       zhaoyunzhou
    </author>
    <content src="http://10.242.18.16:9999" />
    <access origin="*" />
    <access origin="http://*/*" />  
    <access origin="https://*/*" />  
    <!-- <allow-intent href="http://*/*" /> -->
    <!-- <allow-intent href="https://*/*" /> -->
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="http://*/*" />  
    <allow-navigation href="https://*/*" />  
    <allow-navigation href="data:*" />  
    <icon src="res/icon.png"/>
    <platform name="android">
        <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application">
            <application android:usesCleartextTraffic="true" />
        </edit-config>
        <allow-intent href="market:*" />
                <!--
            ldpi    : 36x36 px
            mdpi    : 48x48 px
            hdpi    : 72x72 px
            xhdpi   : 96x96 px
            xxhdpi  : 144x144 px
            xxxhdpi : 192x192 px
        -->
        <icon src="res/android/ldpi.png" density="ldpi" />
        <icon src="res/android/mdpi.png" density="mdpi" />
        <icon src="res/android/hdpi.png" density="hdpi" />
        <icon src="res/android/xhdpi.png" density="xhdpi" />
        <icon src="res/android/xxhdpi.png" density="xxhdpi" />
    </platform>
    <platform name="ios">
        <preference name="WebViewBounce" value="false" />
        <preference name="DisallowOverscroll" value="true" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="res/ios/icon-60x60@3x.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPad -->
        <icon src="res/ios/icon-76x76@1x.png" width="76" height="76" />
        <icon src="res/ios/icon-76x76@2x.png" width="152" height="152" />
        <!-- Spotlight Icon -->
        <icon src="res/ios/icon-40x40@1x.png" width="40" height="40" />
        <icon src="res/ios/icon-40x40@2x.png" width="80" height="80" />
        <!-- iOS 6.1 -->
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="res/ios/icon-29x29@1x.png" width="29" height="29" />
        <icon src="res/ios/icon-29x29@2x.png" width="58" height="58" />
        <icon src="res/ios/icon-29x29@3x.png" width="87" height="87" />
    </platform>
</widget>